---
interface Props {
  question: string;
  answer: string;
}

const { question, answer } = Astro.props;
---

<h3 class="text-[#F2444A] font-semibold px-6 mb-4">PERGUNTAS FREQUENTES</h3>
<div class="mx-6">
  <dl>
    <dt class="font-semibold text-[#1F1818] text-lg mb-2">{question}</dt>
    <dd class="text-[#4A4A4A] text-sm">{answer}</dd>
  </dl>
</div>
