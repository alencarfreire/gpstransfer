---
interface Props {
  icon?: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<h3 class="text-[#F2444A] font-semibold px-6 mb-4">NOSSOS DIFERENCIAIS</h3>
<div class="bg-gradient-to-tl from-[#df2329] to-[#fa6f74] max-w-[300px] text-white rounded-lg text-center p-6 mb-10">
  <span class="text-5xl">{icon}</span>
  <div class="mt-4">
    <h4 class="text-2xl mb-4">{title}</h4>
    <p>{description}</p>
  </div>

</div>