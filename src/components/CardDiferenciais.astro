---
interface Props {
  icon?: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="bg-gradient-to-tl from-[#df2329] to-[#fa6f74] max-w-[280px] text-white rounded-lg p-6 text-center">
  <span class="text-5xl">{icon}</span>
  <div class="mt-4">
    <h4 class="text-2xl mb-4">{title}</h4>
    <p>{description}</p>
  </div>
</div>